<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aktivity.tentang">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbartentang"
            app:title="Tentang Aplikasi"
            app:titleTextColor="@color/orangeMuda"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#fff"
            app:elevation="4dp"
            app:popupTheme="@style/Base.Theme.AppCompat.Light.DarkActionBar" >

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/nama"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:text="Hendra Kusumah"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/nama"
        android:id="@+id/kelas"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:text="TI 2014 A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textAlignment="center"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:text="Implementasi Algoritma Vernan Chipper Pada Aplikasi Pemesanan Makanan Berbasis Qr-Code"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textAlignment="center"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:text="wikwiwkiwkwiwkwiwkwiwkiwkwi"
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>